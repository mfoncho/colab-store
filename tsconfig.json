{
    "compilerOptions": {
        "target": "es5",
        "module": "ESNext",
        "jsx": "preserve",  
        "declaration": true,
        "sourceMap": true,
        "outDir": "./lib",
        "allowSyntheticDefaultImports": true,
        "strict": true, 
        "moduleResolution": "node",
        "esModuleInterop": true,
        "lib": ["dom", "dom.iterable", "esnext"],
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include":["src/**/*"],
    "exclude": ["node_modules", "lib"]
}
